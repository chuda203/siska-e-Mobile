<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Siskae" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorSecondaryContainer">@color/my_light_secondary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/bg2</item>
    </style>

    <style name="Theme.Siskae" parent="Base.Theme.Siskae" />

    <style name="CardViewContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPaddingTop">70dp</item>
        <item name="contentPaddingBottom">50dp</item>
        <item name="contentPaddingRight">50dp</item>
        <item name="contentPaddingLeft">50dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="CardViewContainerLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPaddingTop">50dp</item>
        <item name="contentPaddingBottom">30dp</item>
        <item name="contentPaddingRight">30dp</item>
        <item name="contentPaddingLeft">30dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="TextViewTitleC">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:elevation">11dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewContentC">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
    </style>




</resources>